# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password

# ============================================================================
# DEFAULT ALERT RECIPIENTS (Required)
# ============================================================================
HEALTH_CHECK_ALERT_EMAILS=ops-team@example.com,admin@example.com

# ============================================================================
# PROJECT-SPECIFIC ALERT ROUTING (Optional)
# ============================================================================
CONTAINER_ALERT_ROUTING=passage-plan:maritime@ex.com;vessel-cert:compliance@ex.com

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
HEALTH_CHECK_INTERVAL_SEC=30           # Check every 30 seconds (was HEALTH_CHECK_INTERVAL)
WAIT_AND_CHECK_AGAIN_MIN=10            # Wait 10 min before alerting (was default 15)
HEALTH_CHECK_LOG_LINES=50
SERVER_NAME=Production Server
MONITOR_LOG_FILE=/srv/repos/alerts/_docker_health_monitor/logs/monitor.log

# ============================================================================
# ADVANCED RETRY CONFIGURATION (New in Script 2)
# ============================================================================
HEALTH_USE_BACKOFF=false               # Simple retry (set true for exponential backoff)
HEALTH_MAX_ATTEMPTS=1                  # One retry before alert
HEALTH_BACKOFF_MULTIPLIER=2.0          # Backoff multiplier (not used when backoff=false)
HEALTH_BACKOFF_MAX_MIN=30.0            # Max backoff time (not used when backoff=false)
HEALTH_RETRY_JITTER_SEC=5.0            # Random jitter to prevent thundering herd
MONITOR_MAX_WORKERS=30                 # Thread pool size

# ============================================================================
# LOG CONFIGURATION (New in Script 2)
# ============================================================================
MONITOR_LOG_MAX_BYTES=10485760         # 10MB before rotation
MONITOR_LOG_BACKUP_COUNT=5             # Keep 5 backup files

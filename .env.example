# Email Configuration (shared across all projects)
SMTP_HOST=smtp_host
SMTP_PORT=465
SMTP_USER=smtp_user
SMTP_PASS=smtp_password

# Default Alert Recipients (receives all alerts)
HEALTH_CHECK_ALERT_EMAILS=user@company.com

# Project-Specific Alert Routing (optional)
# Format: pattern:email1,email2;pattern2:email3
# Example routes passage-plan alerts to one team, vessel-certificates to another
CONTAINER_ALERT_ROUTING=

# Monitoring Configuration (healthcheck interval in sec)
HEALTH_CHECK_INTERVAL=1200
HEALTH_CHECK_LOG_LINES=50
SERVER_NAME=from_$(hostname)
